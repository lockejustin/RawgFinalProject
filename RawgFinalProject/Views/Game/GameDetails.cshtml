@{
    ViewData["Title"] = "GameDetails";
}

@model Game

<p>
    <h2>@Model.name</h2>
</p>
<p>
    <h2>@Model.description_raw</h2>
</p>
<p>@Model.metacritic</p>
<p>@Model.released</p>
<p>@Model.playtime</p>
<p>
    @for (int i = 0; i < Model.platforms.Length; i++)
    {
        @Model.platforms[i].platform.name;
    }
</p>
<p>
    @for (int i = 0; i < Model.developers.Length; i++)
    {
        @Model.developers[i].name;
    }

</p>
<p>
    @for (int i = 0; i < Model.publishers.Length; i++)
    {
        @Model.publishers[i].name;
    }

</p>
<p>
    @for (int i = 0; i < Model.tags.Length; i++)
    {
        @Model.tags[i].name;
    }

</p>
<p>@Model.esrb_rating</p>
<p>@Model.clip</p>


